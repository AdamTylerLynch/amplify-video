{
    "video": {
        "inputs": [
            {
                "key": "resourceName",
                "question": "Provide a friendly name for your resource to be used as a label for this category in the project:",
                "validation": {
                    "operator": "regex",
                    "value": "^[a-zA-Z0-9]+$",
                    "onErrorMsg": "Resource name should be alphanumeric"
                },
                "required": true
            },
            {
                "key": "encodingProfile",
                "question": "Encoding Profile: ",
                "type":"list",
                "options": [
                    {
                        "name": "Mobile",
                        "value": "mobile"
                    },
                    {
                        "name": "Web",
                        "value": "web"
                    },
                    {
                        "name": "HD (single 1080p)",
                        "value": "hd"
                    },
                    {
                        "name": "SD (single 480p)",
                        "value": "sd"
                    },
                    {
                        "name": "Advanced (you choose)",
                        "value": "advance"
                    }
                ],
                "required": true
            },
            {
                "key": "type",
                "question": "Select Transcoding options",
                "type":"checkbox",
                "options": [
                    {
                        "name": "HLS",
                        "value": "dash"
                    },
                    {
                        "name": "DASH",
                        "value": "DASH"
                    },
                    {
                        "name": "RAW",
                        "value": "RAW"
                    }
                ],
                "required": true
            },
            {
                "key": "quality",
                "question": "Select Transcoding options",
                "type":"checkbox",
                "options": [
                    {
                        "name": "4k",
                        "value": "4080"
                    },
                    {
                        "name": "1080p",
                        "value": "1080"
                    },
                    {
                        "name": "720p",
                        "value": "720"
                    },
                    {
                        "name": "480p",
                        "value": "480"
                    }
                ],
                "required": true
            }
        ],
        "cfnFilename": "elemental-cloudformation-template.json.ejs",
        "provider": "awscloudformation"
    }
}
